<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardFile">
    <!-- 게시글 파일 등록 -->
    <insert id="insert">
        INSERT INTO board_file(id, name, url, board_id)
        VALUES (board_file_seq.nextval, #{name}, #{url}, #{boardId})
    </insert>

    <!-- 게시글 파일 목록 조회 -->
    <select id="getListByBoardId" resultType="com.kedu.ggirick_client_backend.dto.board.BoardFileDTO">
        SELECT *
        FROM board_file
        WHERE board_id = #{boardId}
    </select>

    <!-- 게시글 파일 조회 -->
    <select id="getFileById" resultType="com.kedu.ggirick_client_backend.dto.board.BoardFileDTO">
        SELECT *
        FROM board_file
        WHERE id = #{id}
    </select>

    <!-- 게시글 파일 삭제 -->
    <delete id="delete">
        DELETE
        FROM board_file
        WHERE id = #{id}
    </delete>
</mapper>